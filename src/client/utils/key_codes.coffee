class KeyCodes
    # Alt key code.
    @KEY_ALT = 18

    # Backspace key code.
    @KEY_BACKSPACE = 8

    # Control key code.
    @KEY_CTRL = 17

    # Delete key code.
    @KEY_DELETE = 46

    # Down arrow code.
    @KEY_DOWN = 40

    # End key code.
    @KEY_END = 35

    # Enter key code.
    @KEY_ENTER = 13

    # Escape key code.
    @KEY_ESCAPE = 27

    # Home key code.
    @KEY_HOME = 36

    # Left key code.
    @KEY_LEFT = 37

    # Page down key code.
    @KEY_PAGEDOWN = 34

    # Page up key code.
    @KEY_PAGEUP = 33

    # Right arrow key code.
    @KEY_RIGHT = 39

    # Shift key code.
    @KEY_SHIFT = 16

    # Tab key code.
    @KEY_TAB = 9

    # Up Arrow key code.
    @KEY_UP = 38

    @KEY_5 = 53
    @KEY_6 = 54

    @NAVIGATION_KEYS = [
        @KEY_LEFT,
        @KEY_RIGHT,
        @KEY_UP,
        @KEY_DOWN,
        @KEY_PAGEUP,
        @KEY_PAGEDOWN,
        @KEY_HOME,
        @KEY_END
    ]

    @SPECIAL_KEYS = [
        @KEY_ALT,
        @KEY_CTRL,
        @KEY_SHIFT
    ]

exports.KeyCodes = KeyCodes